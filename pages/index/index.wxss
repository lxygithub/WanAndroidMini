/**index.wxss**/

.swiper {
  height: 300rpx;
}

.slide-image {
  width: 100%;
  height: 300rpx;
}

.art-item {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.art-body {
  display: flex;
  flex-direction: row;
}

.item-img {
  width: 150rpx;
  height: 150rpx;
  display: block;
}
.art-text {
  display: flex;
  flex-direction: column;
}
.item-title {
  width: 100%;
  margin-left: 15rpx;
  font-size: 35rpx;
  color: black;
  line-height: 1
}

.item-desc {
  width: 100%;
  margin-left: 15rpx;
  font-size: 30rpx;
  color: grey;
  line-height: 1;
  line-break: 1.5;
}

.item-line {
  width: 100%;
  height: 5rpx;
  background: #f7ebeb;
}
